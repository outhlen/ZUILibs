<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/gui_dlg_btn_text"/>
            <padding android:bottom="@dimen/gui_dimens_small" android:left="@dimen/gui_dimens_big" android:right="@dimen/gui_dimens_big" android:top="@dimen/gui_dimens_small"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/gui_white_light"/>
            <padding android:bottom="@dimen/gui_dimens_small" android:left="@dimen/gui_dimens_big" android:right="@dimen/gui_dimens_big" android:top="@dimen/gui_dimens_small"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <padding android:bottom="@dimen/gui_dimens_small" android:left="@dimen/gui_dimens_big" android:right="@dimen/gui_dimens_big" android:top="@dimen/gui_dimens_small"/>
        </shape>
    </item>
</selector>